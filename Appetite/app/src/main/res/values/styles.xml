<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:typeface">normal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.Text_Pago" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#E8EAF6</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_marginLeft">22sp</item>
        <item name="android:layout_marginRight">22sp</item>
    </style>

    <style name="AppTheme.EditText_Pago">
        <item name="android:typeface">normal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#E8EAF6</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColorHint">#9FA8DA</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginLeft">22sp</item>
        <item name="android:layout_marginRight">22sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.03</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="RadioGroup_Pago">
        <item name="android:layout_marginLeft">26sp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
